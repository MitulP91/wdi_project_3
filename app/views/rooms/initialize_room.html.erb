<div class="room" id="room-<%= @room.id %>">

	<div id = "buttons">
		<ul>
			<li id="mute">Mute</li>
			<li id="like">Likes: <span class="num"><%= @likes || 0 %></span></li>
			<li id="dislike">Dislikes: <span class="num"><%= @dislikes || 0 %></span></li>
		</ul>
	</div>

	<div id = "currently-playing">
		<h2>Currently Playing: <span id="current-track"></span><h2>
	</div>

	<div id="search">
		<input type="text" name="search_box" id="search-text" size="15" placeholder="Search" autofocus>
		<div id="search-button">Search</div>
	</div>

	<div id="search-results"></div>

	<div>
		<h2>Playlist</h2>
		<ul id="playlist">
			<% @playlist.each do |song| %>
				<li><%= song.title %></li>
			<% end %>
		</ul>
	</div>

	<ul id="current-users">
		<% @users.each do |user| %>
			<li id="<%= user.id %>">
				<%= user.username %>
			</li>
		<% end %>	
	</ul>

</div>